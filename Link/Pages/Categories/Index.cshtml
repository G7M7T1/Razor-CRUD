@page
@model Link.Pages.Categories.Index

@{
    ViewData["Title"] = "Category";
}

<div class="min-h-screen bg-white dark:bg-gray-900 dark:text-gray-400 flex justify-center">
    <div class="overflow-x-auto relative shadow-md sm:rounded-lg pt-12">
        <div class="flex justify-between">
            <h3>Category</h3>
            <a asp-page="Create" class="focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Create</a>
        </div>
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Category name
                </th>

                <th scope="col" class="py-3 px-6">
                    Display Order
                </th>

                <th scope="col" class="py-3 px-6">
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model.Categories)
            {
                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        @obj.Name
                    </th>

                    <td class="py-4 px-6">
                        @obj.DisplayOrder.ToString()
                    </td>

                    <td class="py-4 px-6">
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="font-medium text-red-300 dark:text-red-300 hover:underline">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>